
<% @conversations.each do |conversation| %>
<%= link_to conversation.subject, conversation_path(conversation) %>
<% end %>

<%= link_to "new conversation", new_conversation_path %>




<div class="col-md-8 col-md-offset-2">


    訂單 <%= @order.id %> - <%= @order.title %>

    <hr>
    <!-- 查看历史信息 -->
    <% if @messages.present? %>
    <% @messages.each do |m| %>
        <% if m.sender == current_user%>
          <div class="text-right" style="background-color:#e5f7ff; margin-bottom: 3px; font-size: 1.2em;">
            <%= m.body %>
          </div>
        <% else %>
          <p>
            <% if m.sender.nickname.present?%>
                <%= m.sender.nickname %>
            <% else %>
                <%= m.sender.email %>
            <% end %>
            说:
            <%= m.body %>
          </p>
        <% end %>
    <% end %>

    <% end %>

    <%= form_tag order_two_conversations_path(@order), method: :post do %>
      <div class="form-group">
        <%= text_area_tag 'body', nil, cols: 3, class: 'form-control', placeholder: 'Type something...', required: true %>
      </div>
      <%= submit_tag "Send Message", class: 'btn btn-primary' %>
    <% end %>


</div>
