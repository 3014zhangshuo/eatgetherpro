<div class="col-md-8 col-md-offset-2 topnavbar">
    <h2>填写会展示到网站上的反馈博客-用户修改</h2>

    <hr>
    <%= simple_form_for [:account,@order,@feedback] do |f| %>
    <%= f.input :title, label: '邀约的主题 - 什么地点、哪种菜系？' %>
    <br>
    <br>
    <%= f.cktext_area :description, label: '描述一下聚餐详情 - 都吃了什么美食、聊了什么有趣的话题？' %>
    <br>
		<br>
		<%= f.input :image, as: :file, label: '吃饭合照 - 把美好的瞬间分享给大家' %>
		</br>
		<br>
    <%= f.input :rating ,:as => :hidden%>
    <div id="rating-for-message-1" class="text-center"></div>
    <br>
    <%= f.submit "更新", class: "btn btn-default outline", :disable_with => 'Submiting...' %>
    <% end %>
		<br>
</div>

<script>
//$('div').raty({ starType: 'i' });

$(function() {
	// 初始化rating选框
	function initRating(obj) {
		obj.raty({
			path:"/",
			starOff: 'star-off.png',
			starOn: 'star-on.png',
			size: 32,
			click: function(score, evt) {
				$('#feedback_rating').val(score);
			}
		});
	};

	var ratableObj = $('#rating-for-message-1');
	initRating(ratableObj);
});
</script>
