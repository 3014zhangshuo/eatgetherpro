          $(function() {
            // 初始化rating选框
            function initRating(obj) {
              obj.raty({
                path:"/",
                starOff: 'star-off.png',
                starOn: 'star-on.png',
                size: 32,
                click: function(score, evt) {
                  $('#feedback_rating').val(score);
                }
              });
            };

            var ratableObj = $('#rating-for-message-1');
            initRating(ratableObj);
          });
          </script>


