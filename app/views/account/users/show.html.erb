<br><br>
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <table class="table table-hover ">
                <tr>
                    <th>头像</th>
                    <td>
                        <% if @user.image.present? %>
                        <%= image_tag(@user.image.thumb.url, class: "thumbnail img-responsive center-block") %>
                    <% else %>
                        <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail img-responsive center-block") %>
                        <% end %>
                    </td>
                </tr>
                <tr>
                    <th>姓名</th>
                    <td><%= @user.nameChi %></td>
                </tr>
                <tr>
                    <th>昵称</th>
                    <td><%= @user.nameNick %></td>
                </tr>
                <tr>
                    <th>性别</th>
                    <td><%= @user.gender %></td>
                </tr>
                <tr>
                    <th>出生年月</th>
                    <td><%= @user.birthday %></td>
                </tr>
                <tr>
                    <th>身高</th>
                    <td><%= @user.heightUser %></td>
                </tr>
                <tr>
                    <th>手机号码</th>
                    <td><%= @user.cellNum %></td>
                </tr>
                <tr>
                    <th>收入</th>
                    <td><%= @user.income %></td>
                </tr>
            </table>
        </div>
    </div>
</div>
