<table class="table person-table">
    <tr>
        <td>
            <% if current_user.image.present? %>
            <%= image_tag(current_user.image.medium.url, class: "thumbnail") %>
        <% else %>
            <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
            <% end %>
        </td>
    </tr>

    <tr>
        <td>
            <i class="fa fa-street-view" aria-hidden="true"></i>
            <%= link_to("个人资料", account_users_path)%>
        </td>
    </tr>
    <tr>
        <td>
            <i class="fa fa-picture-o" aria-hidden="true"></i>
            <%= link_to("我的生活照", photo_account_user_path(current_user)) %>
        </td>
    </tr>
    <tr>
        <td>
            <i class="fa fa-pencil" aria-hidden="true"></i>
            <%= link_to("添加详细资料", edit_account_user_path(current_user)) %>
        </td>
    </tr>
    <tr>
        <td>
            <i class="fa fa-file-text-o" aria-hidden="true"></i>
            <%= link_to("查看我的feedback", account_users_path) %>
        </td>
    </tr>
</table>
