<h2>Your conversations</h2>
<hr>
<ul>
  <% @conversations.each do |conversation| %>
    <li class="list-group-item clearfix">
      <%= conversation.last_sender.nameNick %> - <%= conversation.last_message.body %> - <%= conversation.created_at.to_s(:short) %>

      <%= link_to("查看", account_conversation_path(conversation), :class => "pull-right") %>
    </li>
  <% end %>
</ul>

<hr>
