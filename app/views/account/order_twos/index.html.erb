<div class="container">
  <div class="row">
    <div class="col-md-12">
<table class="table table-hover">
    <thead>
        <tr>
            <th>约饭对象</th>
            <th>约饭地点</th>
            <th>约饭日期</th>
            <th>订单状态</th>
            <th class="center">控制面板</th>
        </tr>
    </thead>

    <tbody>
      <% @order_twos.each do |order| %>
      <tr>
        <% if order.poster_user == current_user %>
          <td><%= link_to(order.asker_user.email, account_user_path(order.asker_user))%></td>
        <% else %>
          <td><%= link_to(order.poster_user.email, account_user_path(order.poster_user))%></td>
        <% end %>
        <td><%= order.post.eat_venue %></td>
        <td><%= order.post.eat_day %></td>
        <td><%= order.aasm_state %></td>
				<td class="center">
        <% case order.aasm_state
				  when "order_matched"%>
				<%= link_to("申请取消", ask_cancel_account_order_two_path(order), :method => :post, :class => "btn btn-xs btn-default outline") %>
				<%= link_to("确认约会", confirm_meeting_account_order_two_path(order), :method => :post, :class => "btn btn-xs btn-default outline") %>
				<% when "order_met" %>
					<%= link_to("已完成", "#", class: "btn btn-sm btn-default outline pull-left disabled") %>
          <% if order.feedbacks.where(:user_id => current_user).blank? %>
            <%= link_to("约会反馈", new_account_order_two_feedback_path(order), class: "btn btn-sm btn-default outline") %>
          <% else %>
						<!--找current user写过的feedback-->
					  <% order.feedbacks.where(:user_id => current_user).each do |feedback| %>
            <%= link_to("修改反馈", edit_account_order_two_feedback_path(order.id, feedback.id), class: "btn btn-sm btn-default outline") %>
						<% end %>
					<% end %>

        <% when "order_cancelled" %>
					<%= link_to("已取消", "#", class: "btn btn-sm btn-default outline pull-left disabled") %>
				<% end %>
      </td>

      </tr>
      <% end %>
    </tbody>
</table>
</div>

</div>

</div>
