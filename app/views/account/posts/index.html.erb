<div class="container">
  <div class="row">
		<div class="jumbotron">
		<!-- <div class="jumbotron" style="background-image: url(<%= asset_path 'cheers1.jpg' %>)"> -->
			<h2 class="userheader">My Requests</h2>
		</div>
    <div class="col-md-12">
			<table class="table table-hover">
		    <thead>
		        <tr>
		            <th>约饭主题</th>
		            <th>约饭内容</th>
		            <th>约饭地点</th>
		            <th>约饭日期</th>
		            <th>控制面板</th>
		        </tr>
		    </thead>

		    <tbody>
		        <% @posts.each do |post| %>
		        <tr>
		            <td><%= link_to(post.title,account_post_path(post)) %></td>
		            <td><%= post.description %></td>
		            <td><%= post.eat_venue %></td>
		            <td><%= post.eat_day %></td>

		            <td>
		                <%= link_to("修改", edit_account_post_path(post), class: "btn btn-default outline") %>
		                <%=link_to("删除", post_path(post), class: "btn btn-primary", method: :delete, data: { confirm: "Are you sure?" })%></td>
		        </tr>
		        <% end %>
		    </tbody>
			</table>
		</div>
	</div>
</div>
