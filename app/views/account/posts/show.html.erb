<div class="container well" style="text-align:center;">
  <div class="post_theme">
     <%= @post.title %>
  </div>
  <div class="col-md-5">
    <% if @post.image.present? %>
       <%= image_tag(@post.image.large.url, class: "thumbnail img-responsive center-block") %>
    <% else %>
       <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail img-responsive center-block") %>
    <% end %>
  </div>
  <div class="col-md-7 show-grid">
    <div class="row well">
      <div class="col-md-3">
        <div class="eat_day">
          <span style="position: relative; top: 20%; text-align: center;">
            <%= @post.eat_day.to_s[0,4]%><br>
            <%= @post.eat_day.to_s[5,9]%>
          </span>
        </div>
      </div>
      <div class="col-md-9">
        <div class="row eat_venue">
          <%= @post.eat_venue %>
        </div>
        <div class="row post_eat_venue_address">
          <i class="fa fa-map-marker"></i>   地址：巴拉拉巴拉拉巴拉拉巴拉拉巴拉拉
        </div>
      </div>
      <br>
    </div>
    <div class="row">
      <div class="post_description">
          <p style="line-height: 30px"><%= @post.description %></p>
      </div>
    </div>
    <div class="row">
      <div class="post_button">
        <% if current_user && current_user.is_asker_of?(@post) %>
          <%= link_to("您已申请约饭","#", class: "btn btn-warning btn-lg",disabled: :true) %>
        <% elsif @post.user_id == current_user.id && current_user %>
          <%= link_to("这是您发起的预约","#", class: "btn btn-primary btn-lg",disabled: :true) %>
        <% else %>
          <%= link_to("加入约饭",application_post_path(@post),method: :post,class: "btn btn-default outline btn-lg") %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<!-- 头像/昵称/兴趣/性别 -->
<div class="container well" >
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>头像</th>
                    <th>昵称</th>
                    <th>兴趣</th>
                    <th>性别</th>
                </tr>
            </thead>
            <tbody>
              <% @asker_users.each do |asker_user| %>
                <tr>
                    <td><%= image_tag(asker_user.image.avatar.url) %></td>
                    <td><%= asker_user.nameNick %></td>
                    <!-- <td><%#= current_asker_request(asker_user.id,@post.id).is_matched %></td> -->
                    <td><%= asker_user.interest %></td>
                    <td><%= asker_user.gender %></td>
                    <% if current_asker_request(asker_user.id,@post.id).is_matched %>
                      <td><%= link_to("已配对","#",method: :post,class: "btn btn-warning btn-sm",disabled: :true)%></td>
                    <% else %>
                      <% if OrderTwo.find_by_post_id(@post.id)%>
                        <td><%= link_to("已被淘汰","#",method: :post,class: "btn btn-danger btn-sm",disabled: :true)%></td>
                      <% else %>
                        <td><%= link_to("通过申请",application_approved_account_post_path(@post,:asker_user => asker_user),method: :post,class: "btn btn-default btn-sm outline")%></td>
                      <% end %>
                    <% end %>
                </tr>
                <% end %>
            </tbody>
        </table>
</div>
