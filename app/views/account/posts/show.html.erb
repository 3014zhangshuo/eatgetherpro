<div class="container">
    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>约饭主题</th>
                        <th>约饭内容</th>
                        <th>约饭地址</th>
                        <th>约饭日期</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><%= @post.title %></td>
                        <td><%= @post.description %></td>
                        <td><%= @post.eat_venue %></td>
                        <td><%= @post.eat_day %></td>
                    </tr>
                </tbody>
            </table>

            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>申请者id</th>
                        <th>申请者email</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                  <% @asker_users.each do |asker_user| %>
                    <tr>
                        <td><%= asker_user.id %></td>
                        <td><%= asker_user.email %></td>
                        
                    </tr>
                    <% end %>
                </tbody>
            </table>

        </div>
    </div>
</div>
