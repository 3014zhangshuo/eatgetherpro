<br><br>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>约饭post1</th>
            <th>约饭主题1</th>
            <th>约饭发起人1</th>
            <th>约饭post2</th>
            <th>约饭主题2</th>
            <th>约饭发起人2</th>
						<th>邀约状态</th>
						<th colspan="3">Admin操作</th>
        </tr>
    </thead>

    <tbody>
        <% @orders.each do |order| %>
        <tr>
            <td><%= order.poster_id %></td>
            <td><%= order.poster.title %></td>
            <td><%= order.poster.user.email %></td>
            <td><%= order.asker_id %></td>
						<td><%= order.asker.title %></td>
            <td><%= order.asker.user.email%></td>
						<td><%= order.aasm_state %></td>
            <td><%=link_to("取消", confirm_cancel_admin_order_path(order), method: :post, class: "btn btn-primary")%></td>
						<td><%=link_to("重启", admin_revive_admin_order_path(order), method: :post, class: "btn btn-primary")%></td>
						<td><%=link_to("删除", admin_order_path(order), method: :delete, class: "btn btn-primary", data: { confirm: "只能删除测试订单，确定？" })%></td>
        </tr>
        <% end %>
    </tbody>
</table>
