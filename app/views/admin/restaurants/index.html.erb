<div class="container">

<div class="row">
  <div class="col-md-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <th><i class="fa fa-list-ol" aria-hidden="true"></i> 编号</th>
          <th>
            <i class="fa fa-map-marker" aria-hidden="true"></i>
            餐馆
          </th>
          <th>
            <i class="fa fa-map-marker" aria-hidden="true"></i>
            地点
          </th>
          <th><i class="fa fa-cog" aria-hidden="true"></i> 控制台</th>
        </tr>
      </thead>
      <tbody>
          <% @restaurants.each do |restaurant| %>
        <tr>
            <td>
              <%= restaurant.id %>
            </td>
          <td>
            <%= restaurant.name %>
          </td>
          <td>
            <%= restaurant.description %>
          </td>
          <td>
            <%= link_to("编辑", edit_admin_restaurant_path(restaurant), class: "btn btn-xs btn-default outline") %>
            <%= link_to("删除", admin_restaurant_path(restaurant), method: :delete, class: "btn btn-xs btn-default outline", :data => { :confirm => "确定要删除此约饭地点？？" } ) %>
          </td>
        </tr>
          <% end %>
      </tbody>
    </table>

  </div>

  <div class="pull-right">
    <%= link_to("加添约饭地点", new_admin_restaurant_path(@restaurant), class: "btn btn-xs btn-default outline") %>
  </div>
</div>

</div>
