<div class="container">
  <div class="pull-right">
    <%= link_to("添加兴趣爱好", new_interest_path(@interest), :class => "btn btn-primary") %>
  </div>
  <div class="row">
    <div class="col-md-10">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
          <th>
            兴趣爱好
          </th>
          <th>
            控制选项
          </th>
        </tr>
        </thead>
        <tbody>
          <% @interests.each do |interest| %>
        <tr>
          <td>
            <%= interest.name %>
          </td>
          <td>
            <%= link_to("删除", admin_interest_path(interest), class: "btn btn-primary", data: { confirm: "确定删除此爱好"}) %>
          </td>
        </tr>
        <% end %>
        </tbody>

      </table>

    </div>

  </div>

</div>
