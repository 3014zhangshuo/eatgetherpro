<div class="row">
    <div class="col-md-12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th><i class="fa fa-list-ol" aria-hidden="true"></i> 编号</th>
                    <th>
                       <i class="fa fa-tags" aria-hidden="true"></i>
                        兴趣爱好
                    </th>
                    <th class="center">
                        <i class="fa fa-cog" aria-hidden="true"></i>
                        控制台
                    </th>
                </tr>
            </thead>
            <tbody>
                <% @interests.each do |interest| %>
                <tr>
                  <td>
                    <%= interest.id %>
                  </td>
                    <td>
                        <!-- <i class="fa fa-tag" aria-hidden="true"></i> -->
                        <%= interest.name %>
                    </td>
                    <td class="center">
                        <%= link_to("编辑", edit_admin_interest_path(interest), class: "btn btn-default outline") %>
                        <%= link_to("删除", admin_interest_path(interest), :method => :delete, class: "btn btn-default outline", data: { confirm: "确定删除此爱好"}) %>
                    </td>
                </tr>
                <% end %>
            </tbody>


        </table>
        <div class="text-center">
            <%= will_paginate @users ,renderer: BootstrapPagination::Rails%>
        </div>
    </div>
    <div class="pull-right">
        <%= link_to("添加兴趣爱好", new_admin_interest_path(@interest), :class => "btn btn-xs btn-default outline") %>
    </div>

</div>
