<div class="container topnavbar">
<br><br>

  <div class="col-md-8 col-md-offset-1">
    <table class="table table-bordered table-striped">
      <colgroup>
        <col class="col-md-2"></col>
        <col class="col-md-8"></col>
      </colgroup>
      <thead>
        <tr>
          <th>类别</th>
          <th>详情</th>
        </tr>
      </thead>
        <tr>
         <th>头像</th>
         <td>
           <% if current_user.image.present? %>
             <%= image_tag(current_user.image.thumb.url, class: "thumbnail img-responsive center-block") %>
           <% else %>
             <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail img-responsive center-block") %>
           <% end %>
           </td>
       </tr>
       <tr>
         <th>姓名</th>
         <td><%= current_user.nameChi %></td>
       </tr>
       <tr>
         <th>昵称</th>
         <td><%= current_user.nameNick %></td>
       </tr>
       <tr>
         <th>性别</th>
         <td><%= current_user.gender %></td>
       </tr>
       <tr>
         <th>出生年月</th>
         <td><%= current_user.birthday %></td>
       </tr>
       <tr>
         <th>身高</th>
         <td><%= current_user.heightUser %></td>
       </tr>
       <tr>
         <th>手机号码</th>
         <td><%= current_user.cellNum %></td>
       </tr>
       <tr>
         <th>收入</th>
         <td><%= current_user.income %></td>
       </tr>
    </table>
  </div>

</div>
