<br><br>
<div class="container">
    <div class="row">
        <div class="col-md-11">
<table class="table table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>约饭主题</th>
            <th>约饭内容</th>
            <th>约饭地点</th>
            <th>约饭日期</th>
            <th>控制面板</th>
        </tr>
    </thead>

    <tbody>

        <% @posts.each do |post| %>
        <tr>
            <td><%= post.id %></td>
            <td><%= post.title %></td>
            <td><%= post.description %></td>
            <td><%= post.eat_venue %></td>
            <td><%= post.eat_day %></td>
            <td><%= link_to("删除", admin_post_path(post), method: :delete, class: "btn btn-default outline center-block", :data => { :confirm => "确定要删除此约饭？？" }) %></td>
            <td>
              <%= simple_form_for Order.new , :url => admin_orders_path(:poster_id => post.id ) do |f| %>
              <div class="center">
                <%= f.input :asker_id, :as => :select, :collection => Post.no_match.all_except(post.id).map(&:title), :label => "配对者", class: "pagination-centered" %>
                <%= f.submit '配对' ,:class => "btn btn-default center-block" %>
              </div>
              <% end %>
      </td>

        </tr>
        <% end %>

    </tbody>
</table>

</div>

</div>

</div>
