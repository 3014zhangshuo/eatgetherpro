<div class="col-md-12">
    <%= link_to("约饭", new_post_path(@post), class: "btn btn-danger pull-right") %>
</div>
<br>

<table class="table table-boldered">
    <thead>
        <tr>
            <th>ID</th>
            <th>约饭主题</th>
            <th>约饭内容</th>
            <th>控制面板</th>
        </tr>
    </thead>

    <tbody>

        <% @posts.each do |post| %>
           <tr>
             <td> <%= post.id %> </td>
             <td>

             <%= simple_form_for Order.new , :url => admin_orders_path do |f| %>

                <%= f.input :poster_id, :as => :select, :collection => User.all.map(&:id)   %>
                <%= f.input :asker_id, :as => :select, :collection => User.all.map(&:id) %>
                <%= f.submit "Submit "%>
             <% end %>

              </td>
           </tr>
        <% end %>

    </tbody>
</table>
</div>
</div>
