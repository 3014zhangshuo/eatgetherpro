    <div class="container">
      <div class="row ">

       <% @posts.each do |post| %>
         <div class="col-md-4">
            <div class="img">
              <%= link_to post_path(post) do %>
                <% if post.image.present? %>
                    <%= image_tag(post.image.thumb.url) %>
                <% else %>
                    <%= image_tag("logo-nopic3.png") %>
                <% end %>
                <div class="desc">
                  <h3> <%= post.title %> </h3>
                  <h4> <strong> <%= post.eat_venue %> </strong></h4>
                  <h5><strong> <%= post.eat_day %> </strong></h5>
               </div>
             <% end %>
           </div>
         </div>
      <% end %>
     </div>
    </div>
