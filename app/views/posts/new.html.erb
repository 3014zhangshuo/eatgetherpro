
<div class="container-fluid">

  <div class="new">
    <div class="new-bg" id="newbg">
      <h1>我要约饭</h1>
    </div>

  </div>

  <div class="container">
      <div class="row">
          <div class="col-md-10 col-md-offset-1">
              <%= simple_form_for @post do |f| %>

              <div class="group">
                  <%= f.input :title, label: '主题' %>
              </div>

              <div class="group">
                  <%= f.input :description, label: '详细信息' %>
              </div>

              <div class="group">
                    <%= f.input :eat_venue, :collection => Post.default_location, :selected => Post.default_location[0],label: '约饭地点' %>
              </div>

              <div class="group">
                <p>约会日期</p>
                <%= radio_button(:post, :eat_day,  Date.this_saturday ,checked: true)%><strong>本周六<%=  Date.this_saturday.to_s(:for_date) %></strong><br>
                <%= radio_button(:post, :eat_day ,  Date.this_sunday ) %><strong>本周日<%= Date.this_sunday.to_s(:for_date)  %></strong>
              </div>

              <div class="group">
                  <%= f.input :image, as: :file, label: '图片' %>
              </div>

              <%= f.submit "提交", class: "btn btn-default", data: { disable_with: "Submitting..." } %>

              <% end %>
          </div>
      </div>
  </div>

</div>
