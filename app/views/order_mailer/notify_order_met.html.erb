<link rel="stylesheet" type="text/css" href="/assets/application.scss" />

<div class="row">
  <div class="col-md-12">
    <h2>
      约会详情 <br>
    </h2>
    <table class="table table-bordered">
      <thead>
        <tr>
					<th>约会主题</th>
          <th>约会日期</th>
					<th>约会地点</th>
					<th>约会描述</th>
					<th colspan="2">约会成员</th>
        </tr>
      </thead>
      <tbody>
				<tr>
					<td><%= @order.poster.title %></td>
					<td><%= @order.poster.eat_day %></td>
					<td><%= @order.poster.eat_venue %></td>
					<td><%= @order.poster.description %></td>
					<td><%= @poster.email %></td>
					<td><%= @asker.email %></td>
				</tr>
      </tbody>
    </table>

		<%= link_to("评论一下本次愉快的晚饭！", new_account_order_feedback_url(@order), class: "btn btn-primary pull-right") %>
  </div>
</div>
